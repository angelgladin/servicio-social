% Options for presentation
% ------------------------
\mode<presentation>
{
\useoutertheme{infolines}
\useinnertheme{rectangles}
\setbeamertemplate{itemize items}[square]
\setbeamertemplate{enumerate items}[square]
% \setbeamertemplate{items}[circles]
\setbeamersize{text margin left=5mm, text margin right=5mm}

\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{frametitle}{bg=mpurple4,fg=white}
\setbeamercolor{normal text}{bg=white,fg=black}
\setbeamercolor{structure}{bg=mpurple4!30!white,fg=black}
\setbeamercolor{title}{bg=mpurple4,fg=white}
\setbeamercolor{subtitle}{bg=mpurple4,fg=white}
\setbeamercolor{titlelike}{bg=white,fg=mpurple4}

\setbeamercolor{alerted text}{fg=lred,bg=calertb}

% \setbeamercolor{separation line}{bg=mpurple4,fg=mpurple4}
% \setbeamercolor{fine separation line}{bg=white,fg=red}
\setbeamercolor{author in head/foot}{bg=mpurple4!30!white,fg=mpurple4!80!black}
\setbeamercolor{title in head/foot}{bg=mpurple4!30!white,fg=mpurple4!80!black}
\setbeamercolor{date in head/foot}{bg=mpurple4!30!white,fg=mpurple4!80!black}
\setbeamercolor{institute in head/foot}
{bg=mpurple4!30!white,fg=mpurple4!80!black}
\setbeamercolor{section in head/foot}{bg=mpurple4!60!white, fg=Red}
\setbeamercolor{subsection in head/foot}
{bg=mpurple4!50!white, fg=mpurple4!50!white}

\setbeamertemplate{headline}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,center]{section in 
head/foot}%
    \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,center]{subsection 
in head/foot}%
    \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
  \end{beamercolorbox}}%
  \vskip0pt%
}
\beamerdefaultoverlayspecification{<+->}
